@model UserInput

<form asp-route="Create">
    <div class="field">
        <label class="label" asp-for="FirstName"></label>
        <div class="control">
            <input class="input" type="text" asp-for="FirstName" />
            <span asp-validation-for="FirstName"></span>
        </div>
    </div>
    <div class="field">
        <label class="label" asp-for="LastName">Last Name</label>
        <div class="control">
            <input class="input" type="text" asp-for="LastName" />
        </div>
    </div>
    <div class="field">
        <label class="label" asp-for="SantaId">Santa Id</label>
        <div class="control">
            <input class="input" type="text" asp-for="SantaId" />
        </div>
    </div>
    <div class="field is-grouped">
        <div class="control">
            <button class="button is-primary">Submit</button>
        </div>
        <div class="control">
            <a asp-action="Index" class="button is-light">Cancel</a>
        </div>
    </div>
</form>